<h1>Log In</h1>

<h2> <%= flash[:error] %></h2>

<%= form_tag login_path, :class => 'form-inline' do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, :class => 'form-control' %>
  </div>

  <%= submit_tag "Login", :class => 'btn btn-info' %>
<% end %>
